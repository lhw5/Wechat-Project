<view class="container"> 
<view class="login-icon"> 
<view class="login-img"><open-data type="userAvatarUrl"></open-data></view>
<open-data type="userNickName"></open-data>
</view> 
<view class="login-from"> 
<!--手机号-->
<view class="inputView"> 
 <image class="nameImage" src="/pages/login/image/zh.png"></image> 
 <label class="loginLab">账号︱</label> 
 <input class="inputText" bindinput="usernameInput" placeholder="请输入学号" /> 
</view> 
<view class="line"></view> 
<!--密码-->
<view class="inputView"> 
 <image class="keyImage" src="/pages/login/image/mm.png"></image> 
 <label class="loginLab">密码︱</label> 
 <input class="inputText" bindinput="passwordInput" placeholder="此为教务系统密码" password/> 
</view> 
<!--按钮-->
<view class="loginBtnView"> 
 <button class="loginBtn"  bindtap="login">确认绑定</button> 
</view> 
</view> 
</view>


