page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #F5F5F5;
  line-height: 1.6;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #c3d6ff;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #c3d6ff;
}
.swiper-tab{ 
  width: 100%; 
  text-align: center; 
  line-height: 80rpx; 
  border-bottom: 2rpx solid #000; 
  display: flex; 
  flex-direction: row; 
  justify-content: center; 
 } 
 .tab-item{ 
  flex: 1; 
  font-size: 30rpx; 
  display: inline-block; 
  color: #777777; 
 } 
 .on{ 
  color: #c3d6ff; 
  border-bottom: 5rpx solid #c3d6ff; 
 } 
 .swiper{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
 } 



