  margin-bottom: 10rpx;
}

/* 名字 */
.card-text {
  width: 100%;
  left: 120rpx;
  top: 35rpx;
}
.card-title {
  font-weight: 700;
  font-size: 28rpx;
  width: 100%;
  line-height: 40rpx;
  display: block;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card-desc {
  width: 100%;
