page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #c3d6ff;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #c3d6ff;
}
.swiper-tab{ 
  width: 100%; 
  text-align: center; 
  line-height: 80rpx; 
  border-bottom: 1px solid #000; 
  display: flex; 
  flex-direction: row; 
  justify-content: center; 
 } 
 .tab-item{ 
  flex: 1; 
  font-size: 30rpx; 
  display: inline-block; 
  color: #777777; 
 } 
 .on{ 
  color: #c3d6ff; 
  border-bottom: 5rpx solid #c3d6ff; 
 } 
 .swiper{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
 } 



 /* one */
 .nav {
  position: relative;
  width: 100%;
  height: 320px;
  display: flex;
  /* margin-bottom: 20rpx; */
  background-color: rgb(253,253,253);
  
}
.cards {
  position: relative;
  width: 100%;
  height: 324px;

}


.card {
  position: absolute;
}

/* 头像 */
.card-url {
  width: 60px;
  display: flex;
}
.card-url image {
  position: relative;
  width: 45px;
  align-self: center;
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

/* 名字 */
.card-text {
  width: 100%;
  left: 60px;
  top: 15px;
}
.card-title {
  font-weight: 700;
  font-size: 28rpx;
  width: 100%;
  line-height: 20px;
  display: block;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card-desc {
  width: 100%;
  line-height: 20px;
  margin-left: 110px;
  margin-top: 15px;
  color: #646566;
  font-size: 30rpx;
  text-align: right;
  display: block;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-right: 2px solid pink;
}

/* 文本 */
.card-wenben {
  width: 100%;
  height: 60px;
  margin-top: 55px;
  font-size: 35rpx;
  line-height: 25px;
}


/* 图片 */
.card-tupian {
  width: 100%;
  display: flex;
  margin-top: 110px;
  border-bottom: 2px solid #c3d6ff;
}
.card-tupian image {
  position: relative;
