page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f6f6f6;
  line-height: 1.6;
}
.navbar{
  flex: none;
  display: flex;
  font-size: 30rpx;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #c3d6ff;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #c3d6ff;
}
