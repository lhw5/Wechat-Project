.nav {
  position: relative;
  width: 100%;
  height: 200rpx;
  display: flex;
  background-color: rgb(253,253,253);
}
.cards {
  position: relative;
  width: 100%;
  height: 204rpx;
  background: #c3d6ff;
}
.card {
  padding-top: 10rpx;
  margin-left: 20rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.card-url {
  width: 176rpx;
  display: flex;
}
.card-url image {
  position: relative;
  width: 100rpx;
  align-self: center;
  margin-left: auto;
  margin-right: auto;
}
.card-text {
  width: 520rpx;
  left: 190rpx;
  padding-right: 5rpx;
}
.card-title {
  font-weight: 700;
  font-size: 28rpx;
  width: 440rpx;
  display: block;
  white-space:nowrap;
  /* -webkit-line-clamp: 2; */
  overflow: hidden;
  text-overflow: ellipsis;
}
.card-desc {
  width: 440rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  margin-right: 100rpx;
  color: #646566;
  font-size: 24rpx;
  display: block;
  white-space:nowrap;
  /* -webkit-line-clamp:2; */
  overflow: hidden;
  text-overflow: ellipsis;
}
.card-bottom {
  display: flex;
  margin-top: 10rpx;
}
.card-bottom view {
  font-size: 26rpx;
  color: rgb(149,149,149);
  margin-right: 30rpx;
  display: flex;
}
.card-bottom image {
  width: 35rpx;
  height: 35rpx;
}
.card-bottom text {
  line-height: 35rpx;
}
.space {
  width: 100%;
  height: 10rpx;
  background-color: white;
}
